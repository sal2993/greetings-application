extends layout

block content
    h1 Sign Up Here

    form(action="/signup" method="post")
        p First Name
        input(type="text" name="firstname")
        br
        p Last Name
        input(type="text" name="lastname")
        br
        p User Name
        input(type="text" name="username")
        br
        p Password
        input(type="password" name="password")
        br
        input( type="submit" value="submit")
    #message
        if message
            p= message
    #firstname
        if firstname
            p= firstname
        br
    #people
        if people
            each item in people
                p= item
